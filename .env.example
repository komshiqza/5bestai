# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Session Secret (fallback for JWT_SECRET)
SESSION_SECRET=your_session_secret_here

# Database URL (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/5best_db

# Cloudinary Configuration (optional - will fallback to local storage if not provided)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Port configuration
PORT=5000

# Node Environment
NODE_ENV=development

# Example values for development:
# JWT_SECRET=your_super_long_random_string_for_jwt_tokens_make_it_at_least_64_characters_long
# DATABASE_URL=postgresql://postgres:password@localhost:5432/5best_development
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=123456789012345
# CLOUDINARY_API_SECRET=abcdefghijklmnopqrstuvwxyz123456
